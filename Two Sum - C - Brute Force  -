/**
 * Note: The returned array must be malloced, assume caller calls free().
 */
int* twoSum(int* nums, int numsSize, int target) {
    int i,j;
    int *index = calloc(2,sizeof(int)); //malloc allocate the space but unknown value , calloc allocate the space and set the value to                                                 0
    for(i=0;i<numsSize;i++)
    {
        for(j=i+1;j<numsSize;j++) //if using for(j=i;j<numsSize;j++) will cause an error , because the final step of the                                                          loop will reach the undefine memory location
        {
            if( *(nums + i) + *(nums + j) == target) 
            {
                *index = i;
                *(index + 1) = j;
                return index;                                     //don't need to return *index because it doesn't match the need of                                                                              function return need
            }
        }
    }
    return index;
}
